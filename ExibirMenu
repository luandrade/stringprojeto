import Cor
print("opção A, adicionar cores.")
print("opção B, exibir cores.")
print("opção C, exibir cores.")

while True:

    opção = str(input("informe a opção desejada:\n"))

    if (opção=="A"):
        informar_cor = str(input("informe a cor que deseja adicionar:\n"))
        Cor.adicionarcores(informar_cor)



    elif opção=="B":
        Cor.listarcores()
    elif opção=="C":
        break
